# Database Configuration
DB_HOST=localhost
DB_PORT=5000
DB_NAME=blablabil_database
DB_USER=appuser
DB_PASSWORD=dbuser123

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption & Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Norwegian ID & Phone Verification (APIs)
NORWEGIAN_ID_API_URL=https://api.digdir.no
NORWEGIAN_ID_API_KEY=your-api-key
PHONE_VERIFICATION_API_KEY=your-phone-verification-key

# Payment Integration (Vipps)
VIPPS_CLIENT_ID=your-vipps-client-id
VIPPS_CLIENT_SECRET=your-vipps-client-secret
VIPPS_SUBSCRIPTION_KEY=your-vipps-subscription-key
VIPPS_MERCHANT_SERIAL_NUMBER=your-merchant-serial
VIPPS_BASE_URL=https://api.vipps.no

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Configuration (Twilio or similar)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+4712345678

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# License Verification API
LICENSE_VERIFICATION_API_URL=https://api.vegvesen.no
LICENSE_VERIFICATION_API_KEY=your-license-api-key

# GDPR & Data Retention
DATA_RETENTION_DAYS=2555
GDPR_EXPORT_EXPIRY_HOURS=48

# Multi-language Support
DEFAULT_LANGUAGE=nb
SUPPORTED_LANGUAGES=nb,nn,en

# Admin Configuration
ADMIN_EMAIL=admin@blablabil.no
SUPPORT_EMAIL=support@blablabil.no

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-key
WEATHER_API_KEY=your-weather-api-key
